{% for item in goods %}
    <div class="product" id = "{{ item['id'] }}">
        <h3>{{ item['title'] }}</h3>
        <img src="../public/img/{{ item['img'] }}" alt="photo-{{ item['title'] }}">
        <p>{{ item['description'] }}</p>
        <p>{{ item['price'] }}</p>
        <button class="buy-btn">Купить</button>
    </div>
{% endfor %}